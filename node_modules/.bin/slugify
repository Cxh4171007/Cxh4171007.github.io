#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/e/BLOG/huahua/node_modules/transliteration/lib/bin/node_modules:/mnt/e/BLOG/huahua/node_modules/transliteration/lib/node_modules:/mnt/e/BLOG/huahua/node_modules/transliteration/node_modules:/mnt/e/BLOG/huahua/node_modules:/mnt/e/BLOG/node_modules:/mnt/e/node_modules:/mnt/e/BLOG/huahua/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/e/BLOG/huahua/node_modules/transliteration/lib/bin/node_modules:/mnt/e/BLOG/huahua/node_modules/transliteration/lib/node_modules:/mnt/e/BLOG/huahua/node_modules/transliteration/node_modules:/mnt/e/BLOG/huahua/node_modules:/mnt/e/BLOG/node_modules:/mnt/e/node_modules:/mnt/e/BLOG/huahua/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../transliteration/lib/bin/slugify" "$@"
else
  exec node  "$basedir/../transliteration/lib/bin/slugify" "$@"
fi
